<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joor.roomapplication">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".controllers.AppController"
        android:allowBackup="true"
        android:icon="@drawable/uu_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/uu_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.ShowFirstAvailableDay" android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.ShowFirstAvailableActivity" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.BookingActivity" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ShowDayActivitySchedule" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ShowDayActivity" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ShowReservationsActivity" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.MainActivity" android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>